@using DataModellen;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/AdminPublicLists.css")" />
</head>
<body>
<div id="AlleLijsten">
    @foreach (Lijst n in Model.PublicLists)
    {
        <text>
            <div class="LijstRij">
                <button class="btn btn-primary" onclick="window.location.href = '@Url.Action("ZieLijst", "Dashboard", new {id = n.Titel + "?" + n.Gebruikersnaam})'">@n.Titel - @n.Gebruikersnaam - @n.Soort - @n.Datum</button>
                <button class="btn btn-success" onclick="window.location.href = '@Url.Action("ApproveList", "Admin", new {id = n.Titel + "?" + n.Gebruikersnaam})'">Keur Lijst goed</button>
                <button class="btn btn-danger" onclick="window.location.href = '@Url.Action("RemovePublic", "Admin", new {id = n.Titel + "?" + n.Gebruikersnaam})'">Haal public weg </button>
            </div>
        </text>
    }
</div>
</body>
